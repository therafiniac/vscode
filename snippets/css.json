{

	// Place your snippets for css here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	// Set A Background Image
	"Background Image": {
		"prefix": "bg-img",
			"body": [ "background-image: url($1);",
			"background-repeat: no-repeat;",
			"background-position: center;",
			"background-size: cover;",
			"background-attachment: fixed;",
			"posion: relative;",
			"$2"
			],
			"description": "Background Image"
	},

	// Set A Background Overlay over the Background Image
	"Background Overlay": {
		"prefix": "bg-overlay",
			"body": [
			"content: '';" ,
			"background-color: $1;",
			"opacity: $2;",
			"position: absolute;",
			"top: 0;",
			"left: 0;",
			"height: 100%;",
			"width: 100%;",
			"z-index: -1;",
			"$3"
			],
			"description": "Background Overlay"
	},

	// Liner Gredient
	"Liner Gradient": {
		"prefix": "lg",
			"body": [ "background: linear-gradient(to right, $1, $2);"
			],
			"description": "Linear Gradient"
	},

	// Box Shadow
		"box-shadow": {
		"prefix": "bs",
			"body": [ "box-shadow: 0 0.5rem 0.375rem -0.375rem rgb(0 0 0 /40%);",
				"$1"
			],
			"description": "Box Shadow"
	},

	// Centering Content in a Container with Flexbox
	"Flex Center": {
		"prefix": "cflex",
			"body": [ "display: flex;",
			"justify-content: center;",
			"align-items: center;",
			"$1"
			],
			"description": "Centering Elements Using Flexbox"
	},


	// Centering Content in a Container with Grid
	"Grid Center": {
		"prefix": "cgrid",
			"body": [ "display: grid;",
			"place-content: center;",
			"$1"
			],
			"description": "Centering Elements Using Grid"
	},

	// Creating A button
	"Button": {
		"prefix": "btn",
			"body": [ "width: $1;",
			"height: $2;",
			"padding: $3 $4;",
			"border-radius: $5;",
			"background-color: $6;",
			"color: $7;",
			"font-size: $8;",
			"font-weight: $9;",
			"text-align: center;",
			"cursor: pointer;",
			"box-shadow:$10;",
			"$11"
			],

			"description": "Creating A Button"
}
}